@model IEnumerable<OFamiliar.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h1>Categorias</h1>

<button style="background-color:cornflowerblue; border:none; border-radius: 5px ">
    @Html.ActionLink("Criar nova categoria", "Create", new { id = "" }, new { @style = "color:#FFFFFF;text-decoration:none" })
</button><br /><br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CategoriaID },new { @class = "btn btn-success" }) 
            @Html.ActionLink("Detalhes", "Details", new { id=item.CategoriaID }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Apagar", "Delete", new { id=item.CategoriaID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
