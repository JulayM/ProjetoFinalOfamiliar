@model IEnumerable<OFamiliar.Models.Familia>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar nova Familia", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataDeCriacao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataDeCriacao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.FamiliaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.FamiliaID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.FamiliaID })
        </td>
    </tr>
}

</table>

