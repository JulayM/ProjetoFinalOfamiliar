@model IEnumerable<OFamiliar.Models.Convite>

@{
    ViewBag.Title = "Index";
}
<br />

<h2>Convida um membro para sua família</h2>

<p>
    <button style="background-color:cornflowerblue;color:white; border:none; border-radius: 5px ">
        @Html.ActionLink("Enviar novo convite", "Create")
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Emissor.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destinatario.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Familiar.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Token)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Destinatario.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emissor.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Familiar.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Token)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ConviteID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ConviteID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.ConviteID })
        </td>
    </tr>
}

</table>
