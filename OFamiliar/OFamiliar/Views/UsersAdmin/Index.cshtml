@model IEnumerable<OFamiliar.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h1>UserName</h1><br />

<button style="background-color:cornflowerblue; border:none; border-radius: 5px ">
    @Html.ActionLink("Cria novo UserName", "Create", new { id = "" }, new { @style = "color:#FFFFFF;text-decoration:none" })
</button><br /><br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) 
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Apagar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
