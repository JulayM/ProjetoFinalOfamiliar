                @Html.DropDownList("DonoDoMovimentoFK", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DonoDoMovimentoFK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
