                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DonoDoMovimentoFK, "Dono do Movimento", htmlAttributes: new { @class = "control-label col-md-2" })
