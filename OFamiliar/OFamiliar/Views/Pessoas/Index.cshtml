@model IEnumerable<OFamiliar.Models.Pessoas>

@{
    ViewBag.Title = "Index";
}

<h1>UTilizadores</h1>

<button style="background-color:cornflowerblue; border:none; border-radius: 5px ">
    @Html.ActionLink("Criar novo Perfil", "Create", new { id = "" }, new { @style = "color:#FFFFFF;text-decoration:none" })
</button>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIF)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NIF)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.PessoaID }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.PessoaID }, new { @class = "btn btn-warning" }) 
                    @Html.ActionLink("Apagar", "Delete", new { id = item.PessoaID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
