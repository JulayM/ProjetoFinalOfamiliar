@{
    ViewBag.Title = "Página inicial";
}
<div style="text-align:center">
    <img src="../Content/imag/logotipo.png"/>
    </div>
    <div class="row">
        <div>
            @* ##################################################################################################### *@
            @* utiliza os dados da var. SUCESSO para apresentar ao utilizador uma mensagem de aviso, sobre o sucesso *@
            @{
                if ((bool)Session["Sucesso"])
                {
                    <div id="msg" class="alert alert-success fade in">
                        <a href="#" class="close" data-dismiss="alert" aria-label="fechar">&times;</a>
                        <b>Sucesso:</b> @Session["mensagem"]
                    </div>
                }
                if ((bool)Session["Erro"])
                {
                    <div id="msg" class="alert alert-danger fade in">
                        <a href="#" class="close" data-dismiss="alert" aria-label="fechar">&times;</a>
                        <b>Erro:</b> @Session["mensagem"]
                    </div>
                }
                // limpa conteúdo da var. de sessão
                Session["Sucesso"] = false;
                Session["Erro"] = false;
                Session["mensagem"] = "";
            }
            @* ##################################################################################################### *@

        </div>
    </div>
    @* <div class="jumbotron">*@
    <div id="meuSlider" class="carousel slide" data-ride="carousel" style="position:fixed">
        <ol class="carousel-indicators">
            <li data-target="#meuSlider" data-slide-to="0" class="active"></li>
            <li data-target="#meuSlider" data-slide-to="1"></li>
                <li data-target="#meuSlider" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active"><img src="../Content/imag/conta.jpg" alt="Slider 1" /></div>
            <div class="item"><img src="../Content/imag/conta1.jpg" alt="Slide 2 " /></div>
                <div class="item"><img src="../Content/imag/conta3.jpg" alt="Slide 3 "/></div>
        </div>
        <a class="left carousel-control" href="#meuSlider" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
        <a class="right carousel-control" href="#meuSlider" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div>
